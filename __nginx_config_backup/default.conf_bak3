# ============================
# üåê HTTP ‚Üí HTTPS Î¶¨Îã§Ïù¥Î†âÌä∏
# ============================
server {
    listen 80;
    server_name emoforge.dev www.emoforge.dev;

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

# ============================
# üîí HTTPS ÏÑ§Ï†ï (Certbot + Reverse Proxy)
# ============================
server {
    listen 443 ssl;
    server_name emoforge.dev www.emoforge.dev;

    # ‚úÖ SSL Ïù∏Ï¶ùÏÑú Í≤ΩÎ°ú (EC2 Í∏∞Ï§Ä)
    ssl_certificate /etc/letsencrypt/live/emoforge.dev/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/emoforge.dev/privkey.pem;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # ============================
    # üé® Ï†ïÏ†Å ÌååÏùº (Frontend)
    # ============================
    location / {
        root /usr/share/nginx/html/auth;
        index index.html;
        try_files $uri $uri/ /index.html =404;
    }

    location /diary {
        alias /usr/share/nginx/html/diary;
        index index.html;
        try_files $uri $uri/ /diary/index.html =404;
    }

    location /admin {
        alias /usr/share/nginx/html/admin;
        index index.html;
        try_files $uri $uri/ /admin/index.html =404;
    }

    # ============================
    # üß† API Gateway (Backend Proxy)
    # ============================
    location /api/auth/ {
        proxy_pass http://auth-service:8081/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
	proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    	proxy_set_header X-Forwarded-Proto $scheme;
	proxy_set_header X-Forwarded-Port $server_port;
    }

    location /api/attach/ {
        proxy_pass http://attachment-service:8082/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
	proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
	proxy_set_header X-Forwarded-Proto $scheme;
    	proxy_set_header X-Forwarded-Port $server_port;
    }

    location /api/diary/ {
        proxy_pass http://diary-service:8084/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
	proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    	proxy_set_header X-Forwarded-Proto $scheme;
    	proxy_set_header X-Forwarded-Port $server_port;
    }

    location /api/langgraph/ {
        proxy_pass http://langgraph_service:8000/api/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
	proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    	proxy_set_header X-Forwarded-Proto $scheme;
    	proxy_set_header X-Forwarded-Port $server_port;
    }
}

