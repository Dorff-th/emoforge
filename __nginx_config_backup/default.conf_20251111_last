# ==========================================
# ğŸŒ Emoforge Nginx Gateway - 2025-11-05
# ==========================================

server {
    listen 80;
    server_name emoforge.dev www.emoforge.dev;

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

# ==========================================
# ğŸ” Redirect non-www â†’ www (HTTPS)
# ==========================================
server {
    listen 443 ssl;
    server_name emoforge.dev;

    ssl_certificate /etc/letsencrypt/live/emoforge.dev/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/emoforge.dev/privkey.pem;

    return 301 https://www.emoforge.dev$request_uri;
}

# ==========================================
# ğŸ”’ HTTPS (www.emoforge.dev)
# ==========================================
server {
    listen 443 ssl;
    server_name www.emoforge.dev;

    ssl_certificate /etc/letsencrypt/live/emoforge.dev/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/emoforge.dev/privkey.pem;

    # âœ… rewrite ë¡œê·¸ ì„¤ì •
    rewrite_log on;
    error_log /var/log/nginx/error.log notice;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # ==========================================
    # ğŸ§  API Gateway (API ë¨¼ì €!)
    # ==========================================

    # âœ… Auth Service
    location /api/auth/ {
        proxy_pass http://auth-service:8081;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;
    }

    # âœ… Diary Service
    location /api/diary/ {
        proxy_pass http://diary-service:8084;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;
    }


    # âœ… Attachment Service
    location /api/attach {
        proxy_pass http://attachment-service:8082;
	rewrite ^/api/attach/(uploads/.*)$ /$1 break;  # âœ… uploadsë§Œ rewrite
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;
    }

    # âœ… LangGraph Service
    location /api/langgraph/ {
        proxy_pass http://langgraph_service:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;

	# âœ… íƒ€ì„ì•„ì›ƒ (FastAPI ì‘ë‹µ ëŒ€ê¸° ì—¬ìœ )
    	proxy_connect_timeout 60s;
    	proxy_read_timeout 120s;
    }

    location /api/posts {
    	proxy_pass http://post-service:8083;
	proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;	
    }

    # ==========================================
    # ğŸ¨ Static Frontends (APIë³´ë‹¤ ì•„ë˜!)
    # ==========================================

    location / {
        root /usr/share/nginx/html/auth;
        index index.html;
        try_files $uri $uri/ /index.html;
    }

    # ================================
    # ğŸ¨ Diary Frontend (SPA)
    # ================================

    location /diary {
    	alias /usr/share/nginx/html/diary/;
	index index.html;


    	# âœ… ì •ì íŒŒì¼(js/css ë“±)ì€ ë¨¼ì € ì²˜ë¦¬
    	location ~ ^/diary/.+\.(js|css|ico|png|jpg|jpeg|svg|woff2?)$ {
            root /usr/share/nginx/html;
            access_log off;
            expires 1M;
            try_files $uri =404;
        }


    	# âœ… SPA React ë¼ìš°íŒ…
    	try_files $uri $uri/ /diary/index.html;
    }

    location /admin {
        alias /usr/share/nginx/html/admin/;
        index index.html;

	# âœ… ì •ì  íŒŒì¼ ë¨¼ì € ì²˜ë¦¬
        location ~* \.(?:js|css|ico|png|jpg|jpeg|svg|woff2?)$ {
            try_files $uri =404;
	    access_log off;
	    expires 1M;
        }

        try_files $uri $uri/ /admin/index.html;
    }

    # -------------------------
    # ğŸ§± post-frontend (í™•ì •íŒ)
    # -------------------------
    location /posts/ {
        alias /usr/share/nginx/html/posts/;
        index index.html;

        # âœ… ì •ì  íŒŒì¼ ë¨¼ì € ì²˜ë¦¬
        location ~* \.(?:js|css|ico|png|jpg|jpeg|svg|woff2?)$ {
            try_files $uri =404;
            access_log off;
            expires 1M;
        }

        try_files $uri $uri/ /posts/index.html;
    }
 
    # ==========================================
    # ğŸ§± ë³´ì•ˆ í—¤ë”
    # ==========================================
    add_header X-Frame-Options "SAMEORIGIN";
    add_header X-Content-Type-Options "nosniff";
    add_header Referrer-Policy "strict-origin-when-cross-origin";
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
}

