# ==========================================
# üåç Emoforge Nginx Gateway - 2025-11-05
# ==========================================

server {
    listen 80;
    server_name emoforge.dev www.emoforge.dev;

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

# ==========================================
# üîÅ Redirect non-www ‚Üí www (HTTPS)
# ==========================================
server {
    listen 443 ssl;
    server_name emoforge.dev;

    ssl_certificate /etc/letsencrypt/live/emoforge.dev/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/emoforge.dev/privkey.pem;

    return 301 https://www.emoforge.dev$request_uri;
}

# ==========================================
# üîí HTTPS (www.emoforge.dev)
# ==========================================
server {
    listen 443 ssl;
    server_name www.emoforge.dev;

    ssl_certificate /etc/letsencrypt/live/emoforge.dev/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/emoforge.dev/privkey.pem;

    # ‚úÖ rewrite Î°úÍ∑∏ ÏÑ§Ï†ï
    rewrite_log on;
    error_log /var/log/nginx/error.log notice;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # ==========================================
    # üß† API Gateway (API Î®ºÏ†Ä!)
    # ==========================================

    # ‚úÖ Auth Service
    location /api/auth/ {
        proxy_pass http://auth-service:8081;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;
    }

    # ‚úÖ Diary Service
    location /api/diary/ {
        proxy_pass http://diary-service:8084;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;
    }


    # ‚úÖ Attachment Service
    location /api/attach {
        proxy_pass http://attachment-service:8082;
	rewrite ^/api/attach/(uploads/.*)$ /$1 break;  # ‚úÖ uploadsÎßå rewrite
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;
    }

    # ‚úÖ LangGraph Service
    location /api/langgraph/ {
        proxy_pass http://langgraph_service:8000/api/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;
    }

    # ==========================================
    # üé® Static Frontends (APIÎ≥¥Îã§ ÏïÑÎûò!)
    # ==========================================

    location / {
        root /usr/share/nginx/html/auth;
        index index.html;
        try_files $uri $uri/ /index.html;
    }

    location /diary {
        alias /usr/share/nginx/html/diary;
        index index.html;
        try_files $uri $uri/ /diary/index.html;
    }

    location /admin {
        alias /usr/share/nginx/html/admin/;
        index index.html;

	# ‚úÖ Ï†ïÏ†Å ÌååÏùº Î®ºÏ†Ä Ï≤òÎ¶¨
        location ~* \.(?:js|css|ico|png|jpg|jpeg|svg|woff2?)$ {
            try_files $uri =404;
	    access_log off;
	    expires 1M;
        }

        try_files $uri $uri/ /admin/index.html;
    }

    # ==========================================
    # üß± Î≥¥Ïïà Ìó§Îçî
    # ==========================================
    add_header X-Frame-Options "SAMEORIGIN";
    add_header X-Content-Type-Options "nosniff";
    add_header Referrer-Policy "strict-origin-when-cross-origin";
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
}

