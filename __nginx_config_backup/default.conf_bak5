# ==========================================
# ğŸš¦ HTTP â†’ HTTPS ë¦¬ë‹¤ì´ë ‰íŠ¸
# ==========================================
server {
    listen 80;
    server_name emoforge.dev www.emoforge.dev;

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

# ==========================================
# ğŸ” Redirect non-www â†’ www (HTTPS)
# ==========================================
server {
    listen 443 ssl;
    server_name emoforge.dev;

    ssl_certificate /etc/letsencrypt/live/emoforge.dev/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/emoforge.dev/privkey.pem;

    # ëª¨ë“  ë¹„-www ìš”ì²­ì€ www ë„ë©”ì¸ìœ¼ë¡œ ë¦¬ë‹¤ì´ë ‰íŠ¸
    return 301 https://www.emoforge.dev$request_uri;
}

# ==========================================
# ğŸ”’ HTTPS ì„¤ì • (www.emoforge.dev ì „ìš©)
# ==========================================
server {
    listen 443 ssl;
    server_name www.emoforge.dev;

    # âœ… SSL ì¸ì¦ì„œ (Certbot)
    ssl_certificate /etc/letsencrypt/live/emoforge.dev/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/emoforge.dev/privkey.pem;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # ==========================================
    # ğŸ¨ ì •ì  íŒŒì¼ (Frontend)
    # ==========================================
    location / {
        root /usr/share/nginx/html/auth;
        index index.html;
        try_files $uri $uri/ /index.html =404;
    }

    location /diary {
        alias /usr/share/nginx/html/diary;
        index index.html;
        try_files $uri $uri/ /diary/index.html =404;
    }

    location /admin {
        alias /usr/share/nginx/html/admin;
        index index.html;
        try_files $uri $uri/ /admin/index.html =404;
    }

    # ==========================================
    # ğŸ§  API Gateway (Backend Proxy)
    # ==========================================

    # âœ… Auth Service
    location /api/auth/ {
        # /api/auth/ â†’ auth-service root ë¡œ ì „ë‹¬
        proxy_pass http://auth-service:8081/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;
    }

    # âœ… Kakao OAuth2 í”„ë¡ì‹œ
    location /oauth2/ {
        proxy_pass http://auth-service:8081/oauth2/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Port $server_port;
    }

    # âœ… Diary Service
    location /api/diary/ {
        proxy_pass http://diary-service:8084/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Port $server_port;
    }

    # âœ… Attachment Service
    location /api/attach/ {
        proxy_pass http://attachment-service:8082/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Port $server_port;
    }

    # âœ… LangGraph Service (Python FastAPI)
    location /api/langgraph/ {
        proxy_pass http://langgraph_service:8000/api/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Port $server_port;
    }

    # ==========================================
    # ğŸ§± ë³´ì•ˆ í—¤ë”
    # ==========================================
    add_header X-Frame-Options "SAMEORIGIN";
    add_header X-Content-Type-Options "nosniff";
    add_header Referrer-Policy "strict-origin-when-cross-origin";
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
}
