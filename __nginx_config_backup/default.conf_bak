# ============================
# ğŸŒ HTTP â†’ HTTPS ë¦¬ë‹¤ì´ë ‰íŠ¸
# ============================
server {
    listen 80;
    server_name emoforge.dev www.emoforge.dev;

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

# ============================
# ğŸ”’ HTTPS ì„¤ì • (Certbot + Reverse Proxy)
# ============================
server {
    listen 443 ssl;
    server_name emoforge.dev www.emoforge.dev;

    # âœ… SSL ì¸ì¦ì„œ ê²½ë¡œ (Certbot ìë™ ë°œê¸‰ ê²½ë¡œ)
    ssl_certificate /etc/letsencrypt/live/emoforge.dev/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/emoforge.dev/privkey.pem;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # ============================
    # ğŸ¨ ì •ì  íŒŒì¼ (í”„ë¡ íŠ¸ì—”ë“œ)
    # ============================
    location / {
        root /usr/share/nginx/html/auth;   # ê¸°ë³¸ ì§„ì…ì : auth-frontend
        index index.html;
        try_files $uri $uri/ /index.html;
    }

    location /diary {
        alias /usr/share/nginx/html/diary;
        index index.html;
        try_files $uri $uri/ /diary/index.html;
    }

    location /admin {
        alias /usr/share/nginx/html/admin;
        index index.html;
        try_files $uri $uri/ /admin/index.html;
    }

    # ============================
    # ğŸ§  API Gateway (ë°±ì—”ë“œ í”„ë¡ì‹œ)
    # ============================
    location /api/auth/ {
        proxy_pass http://auth-service:8081/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    location /api/attach/ {
        proxy_pass http://attachment-service:8082/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    location /api/diary/ {
        proxy_pass http://diary-service:8084/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    location /api/langgraph/ {
        proxy_pass http://langgraph_service:8000/api/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
}
	
